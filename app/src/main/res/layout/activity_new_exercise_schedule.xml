<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.remindme.NewExerciseSchedule"
    android:id="@+id/newExerciseSchedule">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/input_scheduleName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:hint="Schedule Name"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input_exerciseOne"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/input_scheduleName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:hint="Exercise 1"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input_time"
        android:hint="Time"
        android:layout_alignTop="@+id/input_exerciseOne"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input_miles"
        android:hint="Miles"
        android:layout_alignBottom="@+id/input_time"
        android:layout_toRightOf="@+id/input_time"
        android:layout_toEndOf="@+id/input_time" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input_reps"
        android:hint="Reps"
        android:layout_alignBottom="@+id/input_miles"
        android:layout_toRightOf="@+id/input_miles"
        android:layout_toEndOf="@+id/input_miles" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/button_addExerciseSchedule"
        android:layout_below="@+id/input_exerciseOne"
        android:layout_alignLeft="@+id/input_exerciseOne"
        android:layout_alignStart="@+id/input_exerciseOne"
        android:onClick="addNewExerciseSchedule"/>

</RelativeLayout>
